# vim: set ft=yaml:
---
types:
  - # 新機能の追加
    type: feat
    section: Features
    hidden: false
  - # バグ修正
    type: fix
    section: Fixes
    hidden: false
  - # リファクタリング
    type: refactor
    section: Other
    hidden: true
  - # ドキュメントの追加・更新
    type: docs
    section: Documentation
    hidden: true
  - # フォーマット修正 (コードの動作に影響しない変更)
    type: style
    section: Other
    hidden: true
  - # パフォーマンス改善
    type: perf
    section: Other
    hidden: true
  - # テストコードの追加・修正
    type: test
    section: Other
    hidden: true
  - # メンテナンス作業
    type: chore
    section: Other
    hidden: true

# client: クライアントパッケージ
# server: サーバーパッケージ
# shared: 共通パッケージ
# deps: 依存関係
# ci: CI/CD (.github/workflows/ 等)
# claude: CLAUDE.md, .claude 関連
scopeRegex: '^(?:client|server|shared|deps|ci|claude)(?:,(?:client|server|shared|deps|ci|claude))*$'
