{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mise run //packages/*:check*)",
      "Bash(mise run //packages/*:fix*)",
      "Bash(mise run //packages/*:test*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "mise run //packages/...:fix"
          },
          {
            "type": "command",
            "command": "mise run //packages/...:check >&2 || return 2"
          }
        ]
      }
    ]
  }
}
